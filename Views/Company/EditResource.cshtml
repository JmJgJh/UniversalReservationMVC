@using UniversalReservationMVC.Models
@model Resource

@{
    ViewData["Title"] = "Edytuj zas√≥b";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">üìù Edytuj zas√≥b</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="EditResource" asp-route-resourceId="@Model.Id">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label for="name" class="form-label">Nazwa zasobu</label>
                            <input type="text" id="name" name="name" class="form-control" value="@Model.Name" placeholder="np. Sala konferencyjna A" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="resourceType" class="form-label">Typ zasobu</label>
                            <select id="resourceType" name="resourceType" class="form-select">
                                <option value="">-- Wybierz typ --</option>
                                <option value="0" @(Model.ResourceType == ResourceType.Restaurant ? "selected" : "")>Restauracja</option>
                                <option value="1" @(Model.ResourceType == ResourceType.Cinema ? "selected" : "")>Kino</option>
                                <option value="2" @(Model.ResourceType == ResourceType.Office ? "selected" : "")>Biuro</option>
                                <option value="3" @(Model.ResourceType == ResourceType.ConferenceRoom ? "selected" : "")>Sala konferencyjna</option>
                                <option value="4" @(Model.ResourceType == ResourceType.Theatre ? "selected" : "")>Teatr</option>
                                <option value="5" @(Model.ResourceType == ResourceType.Desk ? "selected" : "")>Biurko/Miejsce</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label for="location" class="form-label">Lokalizacja</label>
                            <input type="text" id="location" name="location" class="form-control" value="@Model.Location" placeholder="np. Budynek A, piƒôtro 2" />
                        </div>

                        <div class="form-group mb-3">
                            <label for="capacity" class="form-label">Pojemno≈õƒá (liczba stanowisk)</label>
                            <input type="number" id="capacity" name="capacity" class="form-control" value="@Model.Capacity" min="1" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Wymiary mapy pomieszcze≈Ñ</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="seatMapWidth" class="form-label">Szeroko≈õƒá (X)</label>
                                    <input type="number" id="seatMapWidth" name="seatMapWidth" class="form-control" value="@(Model.SeatMapWidth ?? 5)" min="1" max="20" />
                                </div>
                                <div class="col-md-6">
                                    <label for="seatMapHeight" class="form-label">Wysoko≈õƒá (Y)</label>
                                    <input type="number" id="seatMapHeight" name="seatMapHeight" class="form-control" value="@(Model.SeatMapHeight ?? 5)" min="1" max="20" />
                                </div>
                            </div>
                            <small class="text-muted">Mo≈ºesz zmieniƒá wymiary i edytowaƒá mapƒô w panelu zarzƒÖdzania zasobami</small>
                        </div>

                        <div class="form-group mb-3">
                            <label for="description" class="form-label">Opis (opcjonalnie)</label>
                            <textarea id="description" name="description" class="form-control" rows="3" placeholder="Opis zasobu i jego mo≈ºliwo≈õci">@Model.Description</textarea>
                        </div>
                        <div class="form-group mb-3">
                            <label for="price" class="form-label">Cena (PLN)</label>
                            <input type="number" id="price" name="price" class="form-control" value="@Model.Price" step="0.01" min="0" placeholder="0.00" />
                            <small class="text-muted">Cena za rezerwacjƒô zasobu (zostaw 0 dla darmowych rezerwacji)</small>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0"><i class="fas fa-clock me-1"></i>Godziny otwarcia</h6>
                            </div>
                            <div class="card-body">
                                <p class="text-muted small mb-3">Ustaw godziny dostƒôpno≈õci zasobu dla ka≈ºdego dnia tygodnia. Pozostaw puste dla zasob√≥w dostƒôpnych 24/7.</p>
                                
                                @{
                                    var days = new[] { 
                                        ("monday", "Poniedzia≈Çek"), 
                                        ("tuesday", "Wtorek"), 
                                        ("wednesday", "≈öroda"), 
                                        ("thursday", "Czwartek"), 
                                        ("friday", "PiƒÖtek"), 
                                        ("saturday", "Sobota"), 
                                        ("sunday", "Niedziela") 
                                    };
                                }

                                @foreach (var (day, label) in days)
                                {
                                    <div class="row mb-2">
                                        <div class="col-md-3">
                                            <label class="form-label">@label</label>
                                        </div>
                                        <div class="col-md-3">
                                            <input type="time" class="form-control form-control-sm" 
                                                   name="WorkingHours[@day].Open" 
                                                   placeholder="09:00" />
                                        </div>
                                        <div class="col-md-3">
                                            <input type="time" class="form-control form-control-sm" 
                                                   name="WorkingHours[@day].Close" 
                                                   placeholder="17:00" />
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" 
                                                       name="WorkingHours[@day].IsClosed" 
                                                       id="closed_@day" />
                                                <label class="form-check-label" for="closed_@day">Zamkniƒôte</label>
                                            </div>
                                        </div>
                                    </div>
                                }
                                
                                <small class="text-muted d-block mt-2">
                                    <i class="fas fa-info-circle"></i> Rezerwacje poza godzinami otwarcia bƒôdƒÖ odrzucane.
                                </small>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">üíæ Zapisz zmiany</button>
                            <a asp-controller="Company" asp-action="Resources" class="btn btn-secondary">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">‚ÑπÔ∏è Informacje</h6>
                </div>
                <div class="card-body small">
                    <p><strong>ID zasobu:</strong> @Model.Id</p>
                    <p><strong>Utworzono:</strong> @Model.CreatedAt.ToString("dd MMMM yyyy HH:mm")</p>
                    <p><strong>Ostatnia aktualizacja:</strong> @Model.UpdatedAt?.ToString("dd MMMM yyyy HH:mm")</p>
                    <p><strong>Liczba stanowisk:</strong> @(Model.Seats?.Count ?? 0)</p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">üó∫Ô∏è Mapa pomieszcze≈Ñ</h6>
                </div>
                <div class="card-body">
                    <p class="small">Aby edytowaƒá mapƒô pomieszcze≈Ñ, u≈ºyj opcji <strong>Edytuj mapƒô</strong> w panelu zarzƒÖdzania zasobami.</p>
                    <a asp-action="SeatMapBuilder" asp-route-resourceId="@Model.Id" class="btn btn-sm btn-outline-primary w-100">
                        üó∫Ô∏è Edytuj mapƒô
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
