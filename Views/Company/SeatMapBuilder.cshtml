@using UniversalReservationMVC.Models
@model UniversalReservationMVC.Models.Resource

@{
    ViewData["Title"] = "Konstruktor mapy pomieszczeń";
}

<div class="container-fluid mt-4">
    <form id="seatMapCsrf" method="post" asp-antiforgery="true"></form>
    <div class="row mb-4">
        <div class="col">
            <h1><i class="fas fa-map-marked-alt me-2"></i>Mapa pomieszczeń: @Model.Name</h1>
            <p class="text-muted"><i class="fas fa-map-marker-alt me-1"></i>@Model.Location | <i class="fas fa-chair me-1"></i>Stanowiska: <strong id="totalSeatsCount">@(Model.Seats?.Count ?? 0)</strong></p>
        </div>
        <div class="col-auto">
            <button id="saveMapBtn" class="btn btn-success me-2"><i class="fas fa-save me-1"></i>Zapisz mapę</button>
            <a href="@Url.Action("Resources", "Company")" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-1"></i>Wróć</a>
        </div>
    </div>

    <div class="row g-3">
        <!-- SVG Canvas -->
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-grip-horizontal me-2"></i>Interaktywna mapa</h5>
                    <div>
                        <button id="zoomInBtn" class="btn btn-light btn-sm me-1"><i class="fas fa-search-plus"></i></button>
                        <button id="zoomOutBtn" class="btn btn-light btn-sm me-1"><i class="fas fa-search-minus"></i></button>
                        <button id="resetZoomBtn" class="btn btn-light btn-sm"><i class="fas fa-undo"></i></button>
                    </div>
                </div>
                <div class="card-body p-0 bg-light" style="height: 600px; overflow: hidden; position: relative;">
                    <svg id="seatMapSvg" width="100%" height="100%" viewBox="0 0 1000 600" style="cursor: crosshair; background: white;">
                        <defs>
                            <pattern id="gridPattern" width="50" height="50" patternUnits="userSpaceOnUse">
                                <path d="M 50 0 L 0 0 0 50" fill="none" stroke="#e9ecef" stroke-width="1"/>
                            </pattern>
                            <filter id="shadow">
                                <feDropShadow dx="0" dy="2" stdDeviation="3" flood-opacity="0.3"/>
                            </filter>
                        </defs>
                        <rect width="100%" height="100%" fill="url(#gridPattern)" />
                        <g id="seatsGroup"></g>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Control Panel -->
        <div class="col-lg-4">
            <!-- Add Seat Card -->
            <div class="card shadow mb-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Dodaj stanowisko</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Identyfikator (Rząd)</label>
                        <input type="text" id="newSeatRow" class="form-control" placeholder="np. A, 1" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Numer (Miejsce)</label>
                        <input type="number" id="newSeatNumber" class="form-control" placeholder="np. 1, 2, 3" min="1" />
                    </div>
                    <button id="addSeatBtn" class="btn btn-success w-100"><i class="fas fa-plus me-1"></i>Dodaj na mapie</button>
                    <div class="form-text mt-2"><i class="fas fa-info-circle me-1"></i>Kliknij na mapie aby umieścić stanowisko</div>
                </div>
            </div>

            <!-- Seat List -->
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Lista stanowisk</h5>
                </div>
                <div class="card-body p-0">
                    <div id="seatsList" class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
                        <!-- Populated by JS -->
                    </div>
                </div>
            </div>

            <!-- Legend -->
            <div class="card shadow mt-3">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Legenda</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <div style="width: 30px; height: 30px; background: #28a745; border-radius: 4px; margin-right: 10px;"></div>
                        <span>Dostępne</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <div style="width: 30px; height: 30px; background: #ffc107; border-radius: 4px; margin-right: 10px;"></div>
                        <span>Wybrane</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <div style="width: 30px; height: 30px; background: #dc3545; border-radius: 4px; margin-right: 10px;"></div>
                        <span>Zajęte</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/signalr@1.0.27/dist/browser/signalr.min.js"></script>
<script>
    const resourceId = @Model.Id;
    let seats = @Html.Raw(Json.Serialize(Model.Seats ?? new List<Seat>()));
    let selectedSeatId = null;
    let addingMode = false;
    let pendingClickPosition = null;
    let scale = 1;

    const svg = document.getElementById('seatMapSvg');
    const seatsGroup = document.getElementById('seatsGroup');
    const seatsList = document.getElementById('seatsList');

    // Initialize map
    function initMap() {
        renderSeats();
        updateSeatsList();
    }

    // Render all seats
    function renderSeats() {
        seatsGroup.innerHTML = '';
        seats.forEach(seat => {
            drawSeat(seat);
        });
    }

    // Draw individual seat
    function drawSeat(seat) {
        const g = document.createElementNS('http://www.w3.org/2000/svg', 'g');
        g.setAttribute('data-seat-id', seat.id);
        g.setAttribute('transform', `translate(${seat.x}, ${seat.y})`);
        g.style.cursor = 'move';

        const rect = document.createElementNS('http://www.w3.org/2000/svg', 'rect');
        rect.setAttribute('width', '40');
        rect.setAttribute('height', '40');
        rect.setAttribute('rx', '4');
        rect.setAttribute('fill', seat.isReserved ? '#dc3545' : '#28a745');
        rect.setAttribute('filter', 'url(#shadow)');
        rect.setAttribute('stroke', '#fff');
        rect.setAttribute('stroke-width', '2');

        const text = document.createElementNS('http://www.w3.org/2000/svg', 'text');
        text.setAttribute('x', '20');
        text.setAttribute('y', '25');
        text.setAttribute('text-anchor', 'middle');
        text.setAttribute('font-size', '12');
        text.setAttribute('font-weight', 'bold');
        text.setAttribute('fill', 'white');
        text.textContent = `${seat.x}${seat.y}`;

        g.appendChild(rect);
        g.appendChild(text);
        seatsGroup.appendChild(g);

        // Drag functionality
        let isDragging = false;
        let startX, startY, offsetX, offsetY;

        g.addEventListener('mousedown', (e) => {
            if (addingMode) return;
            isDragging = true;
            selectedSeatId = seat.id;
            highlightSeat(seat.id);
            
            const pt = svg.createSVGPoint();
            pt.x = e.clientX;
            pt.y = e.clientY;
            const svgPt = pt.matrixTransform(svg.getScreenCTM().inverse());
            startX = svgPt.x;
            startY = svgPt.y;
            offsetX = seat.x;
            offsetY = seat.y;
            e.preventDefault();
        });

        document.addEventListener('mousemove', (e) => {
            if (!isDragging) return;
            const pt = svg.createSVGPoint();
            pt.x = e.clientX;
            pt.y = e.clientY;
            const svgPt = pt.matrixTransform(svg.getScreenCTM().inverse());
            const dx = svgPt.x - startX;
            const dy = svgPt.y - startY;
            seat.x = Math.max(0, Math.min(960, offsetX + dx));
            seat.y = Math.max(0, Math.min(560, offsetY + dy));
            g.setAttribute('transform', `translate(${seat.x}, ${seat.y})`);
        });

        document.addEventListener('mouseup', () => {
            if (isDragging) {
                isDragging = false;
                updateSeatsList();
            }
        });

        g.addEventListener('dblclick', () => {
            if (confirm(`Usunąć stanowisko ${seat.x}${seat.y}?`)) {
                deleteSeat(seat.id);
            }
        });
    }

    // Highlight selected seat
    function highlightSeat(seatId) {
        document.querySelectorAll('#seatsGroup > g').forEach(g => {
            const rect = g.querySelector('rect');
            if (g.getAttribute('data-seat-id') == seatId) {
                rect.setAttribute('stroke', '#ffc107');
                rect.setAttribute('stroke-width', '4');
            } else {
                rect.setAttribute('stroke', '#fff');
                rect.setAttribute('stroke-width', '2');
            }
        });
    }

    // Add seat mode
    document.getElementById('addSeatBtn').addEventListener('click', () => {
        const row = document.getElementById('newSeatRow').value.trim();
        const num = parseInt(document.getElementById('newSeatNumber').value);
        
        if (!row || !num) {
            alert('Podaj rząd i numer stanowiska');
            return;
        }

        addingMode = true;
        svg.style.cursor = 'crosshair';
        document.getElementById('addSeatBtn').classList.add('btn-warning');
        document.getElementById('addSeatBtn').classList.remove('btn-success');
        document.getElementById('addSeatBtn').innerHTML = '<i class="fas fa-map-marker-alt me-1"></i>Kliknij na mapie...';
    });

    // Click to place seat
    svg.addEventListener('click', (e) => {
        if (!addingMode) return;

        const row = document.getElementById('newSeatRow').value.trim();
        const num = parseInt(document.getElementById('newSeatNumber').value);

        if (!row || !num) return;

        const pt = svg.createSVGPoint();
        pt.x = e.clientX;
        pt.y = e.clientY;
        const svgPt = pt.matrixTransform(svg.getScreenCTM().inverse());

        const newSeat = {
            id: Math.max(0, ...seats.map(s => s.id || 0)) + 1,
            x: Math.max(0, Math.min(960, svgPt.x - 20)),
            y: Math.max(0, Math.min(560, svgPt.y - 20)),
            resourceId: resourceId,
            isReserved: false
        };

        seats.push(newSeat);
        drawSeat(newSeat);
        updateSeatsList();

        // Reset add mode
        addingMode = false;
        svg.style.cursor = 'move';
        document.getElementById('addSeatBtn').classList.remove('btn-warning');
        document.getElementById('addSeatBtn').classList.add('btn-success');
        document.getElementById('addSeatBtn').innerHTML = '<i class="fas fa-plus me-1"></i>Dodaj na mapie';
        document.getElementById('newSeatRow').value = '';
        document.getElementById('newSeatNumber').value = '';
    });

    // Delete seat
    function deleteSeat(seatId) {
        seats = seats.filter(s => s.id !== seatId);
        renderSeats();
        updateSeatsList();
    }

    // Update seats list
    function updateSeatsList() {
        seatsList.innerHTML = '';
        document.getElementById('totalSeatsCount').textContent = seats.length;
        
        if (seats.length === 0) {
            seatsList.innerHTML = '<div class="p-3 text-center text-muted"><i class="fas fa-inbox fa-2x mb-2"></i><br>Brak stanowisk</div>';
            return;
        }

        seats.forEach(seat => {
            const item = document.createElement('div');
            item.className = 'list-group-item d-flex justify-content-between align-items-center';
            item.innerHTML = `
                <div>
                    <i class="fas fa-chair text-${seat.isReserved ? 'danger' : 'success'} me-2"></i>
                    <strong>${seat.x}${seat.y}</strong>
                    <small class="text-muted"> (X:${Math.round(seat.x)}, Y:${Math.round(seat.y)})</small>
                </div>
                <button class="btn btn-sm btn-danger" onclick="deleteSeat(${seat.id})">
                    <i class="fas fa-trash"></i>
                </button>
            `;
            item.addEventListener('click', (e) => {
                if (!e.target.closest('button')) {
                    selectedSeatId = seat.id;
                    highlightSeat(seat.id);
                }
            });
            seatsList.appendChild(item);
        });
    }

    // Zoom controls
    document.getElementById('zoomInBtn').addEventListener('click', () => {
        scale = Math.min(2, scale + 0.1);
        seatsGroup.setAttribute('transform', `scale(${scale})`);
    });

    document.getElementById('zoomOutBtn').addEventListener('click', () => {
        scale = Math.max(0.5, scale - 0.1);
        seatsGroup.setAttribute('transform', `scale(${scale})`);
    });

    document.getElementById('resetZoomBtn').addEventListener('click', () => {
        scale = 1;
        seatsGroup.setAttribute('transform', 'scale(1)');
    });

    // Save map
    document.getElementById('saveMapBtn').addEventListener('click', async () => {
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
        const saveBtn = document.getElementById('saveMapBtn');
        saveBtn.disabled = true;
        saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Zapisywanie...';

        try {
            const response = await fetch('/Company/SaveSeatMap', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({
                    resourceId: resourceId,
                    seats: seats.map(s => ({
                        id: s.id || 0,
                        x: Math.round(s.x),
                        y: Math.round(s.y),
                        resourceId: resourceId
                    }))
                })
            });

            if (response.ok) {
                alert('✓ Mapa została zapisana');
                window.location.reload();
            } else {
                const error = await response.text();
                alert('Błąd zapisu: ' + error);
            }
        } catch (error) {
            alert('Błąd połączenia: ' + error.message);
        } finally {
            saveBtn.disabled = false;
            saveBtn.innerHTML = '<i class="fas fa-save me-1"></i>Zapisz mapę';
        }
    });

    // Initialize on load
    initMap();
</script>
}
