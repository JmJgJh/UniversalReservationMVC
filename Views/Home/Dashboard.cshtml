@model UniversalReservationMVC.ViewModels.UserDashboardViewModel
@{
    ViewData["Title"] = "Panel użytkownika";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5"><i class="fas fa-tachometer-alt text-primary"></i> Witaj, @User.Identity!.Name!</h1>
            <p class="text-muted">Twój osobisty panel rezerwacji</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Wszystkie</h6>
                            <h2 class="display-4 fw-bold">@Model.TotalReservationsCount</h2>
                            <small>rezerwacji</small>
                        </div>
                        <div>
                            <i class="fas fa-calendar-check fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Aktywne</h6>
                            <h2 class="display-4 fw-bold">@Model.ActiveReservationsCount</h2>
                            <small>rezerwacje</small>
                        </div>
                        <div>
                            <i class="fas fa-check-circle fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Zakończone</h6>
                            <h2 class="display-4 fw-bold">@Model.CompletedReservationsCount</h2>
                            <small>rezerwacji</small>
                        </div>
                        <div>
                            <i class="fas fa-flag-checkered fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Wydano</h6>
                            <h2 class="display-4 fw-bold">@Model.TotalSpent.ToString("C")</h2>
                            <small>PLN</small>
                        </div>
                        <div>
                            <i class="fas fa-wallet fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Upcoming Reservations -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt"></i> Nadchodzące rezerwacje</h5>
                </div>
                <div class="card-body">
                    @if (Model.UpcomingReservations.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var reservation in Model.UpcomingReservations)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <i class="fas fa-door-open text-primary"></i>
                                                @reservation.Resource?.Name
                                                @if (reservation.Event != null)
                                                {
                                                    <span class="badge bg-info">@reservation.Event.Title</span>
                                                }
                                            </h6>
                                            <p class="mb-1 text-muted">
                                                <i class="fas fa-clock"></i> @reservation.StartTime.ToString("dd.MM.yyyy HH:mm")
                                                @if (reservation.Seat != null)
                                                {
                                                    <span class="ms-2"><i class="fas fa-chair"></i> Rząd @reservation.Seat.X, Miejsce @reservation.Seat.Y</span>
                                                }
                                            </p>
                                            <small class="text-muted">Status: <span class="badge bg-@(GetStatusBadgeColor(reservation.Status))">@GetStatusName(reservation.Status)</span></small>
                                        </div>
                                        <div class="ms-3">
                                            <a href="@Url.Action("Details", "Reservation", new { id = reservation.Id })" class="btn btn-sm btn-outline-primary">
                                                Szczegóły
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="mt-3 text-center">
                            <a href="@Url.Action("MyReservations", "Reservation")" class="btn btn-primary">
                                <i class="fas fa-list"></i> Zobacz wszystkie rezerwacje
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Brak nadchodzących rezerwacji</p>
                            <a href="@Url.Action("Index", "Event")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Przeglądaj wydarzenia
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Past Reservations -->
            <div class="card shadow mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-history"></i> Historia rezerwacji</h5>
                </div>
                <div class="card-body">
                    @if (Model.PastReservations.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var reservation in Model.PastReservations)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@reservation.Resource?.Name</h6>
                                            <small class="text-muted">
                                                <i class="fas fa-clock"></i> @reservation.StartTime.ToString("dd.MM.yyyy HH:mm")
                                            </small>
                                        </div>
                                        <span class="badge bg-secondary">Zakończona</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">Brak historii rezerwacji</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Szybkie akcje</h5>
                </div>
                <div class="card-body d-grid gap-2">
                    <a href="@Url.Action("Index", "Event")" class="btn btn-primary">
                        <i class="fas fa-calendar"></i> Przeglądaj wydarzenia
                    </a>
                    <a href="@Url.Action("Resources", "Home")" class="btn btn-info text-white">
                        <i class="fas fa-door-open"></i> Przeglądaj zasoby
                    </a>
                    <a href="@Url.Action("MyReservations", "Reservation")" class="btn btn-secondary">
                        <i class="fas fa-list"></i> Moje rezerwacje
                    </a>
                    @if (Model.MyCompanies.Any())
                    {
                        <a href="@Url.Action("Dashboard", "Company")" class="btn btn-warning">
                            <i class="fas fa-building"></i> Panel firmy
                        </a>
                    }
                </div>
            </div>

            <!-- My Companies -->
            @if (Model.MyCompanies.Any())
            {
                <div class="card shadow mb-4">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0"><i class="fas fa-building"></i> Moje firmy</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var company in Model.MyCompanies)
                            {
                                <a href="@Url.Action("Dashboard", "Company", new { id = company.Id })" class="list-group-item list-group-item-action">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0">@company.Name</h6>
                                            <small class="text-muted">@company.Description</small>
                                        </div>
                                        <i class="fas fa-chevron-right"></i>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Upcoming Events -->
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-star"></i> Polecane wydarzenia</h5>
                </div>
                <div class="card-body">
                    @if (Model.UpcomingEvents.Any())
                    {
                        @foreach (var ev in Model.UpcomingEvents)
                        {
                            <div class="mb-3 pb-3 @(ev != Model.UpcomingEvents.Last() ? "border-bottom" : "")">
                                <h6 class="mb-1">
                                    <a href="@Url.Action("Details", "Event", new { id = ev.Id })" class="text-decoration-none">
                                        @ev.Title
                                    </a>
                                </h6>
                                <small class="text-muted">
                                    <i class="fas fa-calendar"></i> @ev.StartTime.ToString("dd.MM.yyyy HH:mm")
                                </small>
                                <br />
                                <small class="text-muted">
                                    <i class="fas fa-map-marker-alt"></i> @ev.Resource?.Name
                                </small>
                            </div>
                        }
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Index", "Event")" class="btn btn-sm btn-outline-info w-100">
                                Zobacz wszystkie
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">Brak nadchodzących wydarzeń</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusName(UniversalReservationMVC.Models.ReservationStatus status)
    {
        return status switch
        {
            UniversalReservationMVC.Models.ReservationStatus.Pending => "Oczekująca",
            UniversalReservationMVC.Models.ReservationStatus.Confirmed => "Potwierdzona",
            UniversalReservationMVC.Models.ReservationStatus.Cancelled => "Anulowana",
            UniversalReservationMVC.Models.ReservationStatus.Completed => "Zakończona",
            _ => status.ToString()
        };
    }

    string GetStatusBadgeColor(UniversalReservationMVC.Models.ReservationStatus status)
    {
        return status switch
        {
            UniversalReservationMVC.Models.ReservationStatus.Pending => "warning",
            UniversalReservationMVC.Models.ReservationStatus.Confirmed => "success",
            UniversalReservationMVC.Models.ReservationStatus.Cancelled => "danger",
            UniversalReservationMVC.Models.ReservationStatus.Completed => "secondary",
            _ => "secondary"
        };
    }
}
