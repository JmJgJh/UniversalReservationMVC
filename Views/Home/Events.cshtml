@model IEnumerable<UniversalReservationMVC.Models.Event>
@{
    ViewData["Title"] = "Wydarzenia";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6">Wydarzenia</h1>
            <p class="text-muted">Przeglądaj wszystkie dostępne wydarzenia i zarezerwuj swoje miejsce</p>
        </div>
        @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
        {
            <a href="@Url.Action("Create", "Event")" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Dodaj wydarzenie
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <i class="bi bi-calendar-x display-1 text-muted mb-3"></i>
                <h4 class="mb-2">Brak dostępnych wydarzeń</h4>
                <p class="text-muted mb-4">Aktualnie nie ma zaplanowanych żadnych wydarzeń.</p>
                @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                {
                    <a href="@Url.Action("Create", "Event")" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Utwórz pierwsze wydarzenie
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Index", "Resource")" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left me-2"></i>Przeglądaj zasoby
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                var isUpcoming = item.StartTime > DateTime.Now;
                var isPast = item.EndTime < DateTime.Now;
                var statusBadge = isPast ? "bg-secondary" : isUpcoming ? "bg-success" : "bg-primary";
                var statusText = isPast ? "Zakończone" : isUpcoming ? "Nadchodzące" : "W trakcie";

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 hover-lift">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@item.Title</h5>
                                <span class="badge @statusBadge">@statusText</span>
                            </div>

                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <p class="card-text text-muted mb-3">
                                    @(item.Description.Length > 100 
                                        ? item.Description.Substring(0, 100) + "..." 
                                        : item.Description)
                                </p>
                            }
                            
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-building text-primary me-2"></i>
                                    <span class="fw-semibold">@item.Resource?.Name</span>
                                </div>
                                @if (item.Resource?.ResourceType != null)
                                {
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-tag text-primary me-2"></i>
                                        <span class="badge bg-info-subtle text-info">@item.Resource.ResourceType</span>
                                    </div>
                                }
                            </div>

                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block">Rozpoczęcie</small>
                                    <div class="fw-semibold">@item.StartTime.ToString("dd.MM.yyyy")</div>
                                    <small class="text-muted">@item.StartTime.ToString("HH:mm")</small>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Zakończenie</small>
                                    <div class="fw-semibold">@item.EndTime.ToString("dd.MM.yyyy")</div>
                                    <small class="text-muted">@item.EndTime.ToString("HH:mm")</small>
                                </div>
                            </div>

                            @if (item.ParentEventId != null)
                            {
                                <div class="alert alert-info py-2 mb-3">
                                    <i class="bi bi-arrow-repeat me-1"></i>
                                    <small>Część serii wydarzeń cyklicznych</small>
                                </div>
                            }

                            <div class="mt-auto pt-3">
                                <div class="d-flex gap-2">
                                    <a href="@Url.Action("Details", "Event", new { id = item.Id })" 
                                       class="btn btn-primary flex-grow-1">
                                        <i class="bi bi-eye me-1"></i>Szczegóły
                                    </a>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                                    {
                                        <a href="@Url.Action("Edit", "Event", new { id = item.Id })" 
                                           class="btn btn-warning" title="Edytuj">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (Model.Any())
    {
        <div class="mt-5 pt-4 border-top">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card border-0 bg-light h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-event display-4 text-primary mb-3"></i>
                            <h5 class="card-title">Wszystkie wydarzenia</h5>
                            <p class="card-text text-muted">Łącznie: <strong>@Model.Count()</strong></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card border-0 bg-light h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-check display-4 text-success mb-3"></i>
                            <h5 class="card-title">Nadchodzące</h5>
                            <p class="card-text text-muted">Liczba: <strong>@Model.Count(e => e.StartTime > DateTime.Now)</strong></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card border-0 bg-light h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-x display-4 text-secondary mb-3"></i>
                            <h5 class="card-title">Zakończone</h5>
                            <p class="card-text text-muted">Liczba: <strong>@Model.Count(e => e.EndTime < DateTime.Now)</strong></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
