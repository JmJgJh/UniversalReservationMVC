@model UniversalReservationMVC.ViewModels.ReservationCreateViewModel
@{
    ViewData["Title"] = "Nowa rezerwacja";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Nowa rezerwacja</h2>
            <p class="text-muted">Podaj szczegóły swojej rezerwacji.</p>

            @if (ViewBag.ResourceName != null)
            {
                <div class="alert alert-info">
                    <strong>Zasób:</strong> @ViewBag.ResourceName
                </div>
            }

            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

            <form method="post">
                @Html.AntiForgeryToken()
                
                <input type="hidden" asp-for="ResourceId" />
                <input type="hidden" asp-for="SeatId" />
                <input type="hidden" asp-for="EventId" />

                <div class="mb-3">
                    <label class="form-label">Data i godzina rozpoczęcia</label>
                    <input type="datetime-local" class="form-control" asp-for="StartTime" required />
                    <span class="invalid-feedback" asp-validation-for="StartTime"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Data i godzina zakończenia</label>
                    <input type="datetime-local" class="form-control" asp-for="EndTime" required />
                    <span class="invalid-feedback" asp-validation-for="EndTime"></span>
                </div>

                <div class="alert alert-secondary">
                    <p><strong>Zaznaczeni dane:</strong></p>
                    <p>
                        <strong>Miejsce:</strong> <span class="badge bg-info" id="seatLabel">@ViewBag.SeatLabel</span>
                    </p>
                    @if (Model.EventId.HasValue)
                    {
                        <p>
                            <strong>Wydarzenie:</strong> <span class="badge bg-primary">@Model.EventId</span>
                        </p>
                    }
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check"></i> Potwierdź rezerwację
                    </button>
                    <a href="@Url.Action("Details", "Resource", new { id = Model.ResourceId })" class="btn btn-secondary">
                        Anuluj
                    </a>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Podsumowanie</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID Zasobu:</strong> @Model.ResourceId</p>
                    <p><strong>ID Miejsca:</strong> @Model.SeatId</p>
                    <p class="text-muted small">Wypełnij daty aby zobaczyć szczegóły rezerwacji.</p>
                </div>
            </div>
        </div>
    </div>
</div>
