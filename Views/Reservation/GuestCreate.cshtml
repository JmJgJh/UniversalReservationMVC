@model UniversalReservationMVC.ViewModels.GuestReservationViewModel
@{
    ViewData["Title"] = "Rezerwacja jako gość";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Rezerwacja jako gość</h2>
            <p class="text-muted">Zarezerwuj miejsce bez logowania.</p>

            @if (ViewBag.ResourceName != null)
            {
                <div class="alert alert-info">
                    <i class="fas fa-door-open me-2"></i><strong>Zasób:</strong> @ViewBag.ResourceName
                    @if (ViewBag.SeatLabel != null)
                    {
                        <br/><i class="fas fa-chair me-2"></i><strong>Miejsce:</strong> @ViewBag.SeatLabel
                    }
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Błędy walidacji</h5>
                    @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                </div>
            }

            <form asp-action="GuestCreate" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="ResourceId" />
                <input type="hidden" asp-for="SeatId" />
                <input type="hidden" asp-for="EventId" />
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="card shadow mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-user me-2"></i>Dane kontaktowe</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info small mb-3">
                            <i class="fas fa-info-circle me-2"></i>Podaj co najmniej adres e-mail lub numer telefonu
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input type="email" class="form-control" asp-for="Email" name="Email" id="Email" placeholder="twoj@email.com" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label"></label>
                                <input type="tel" class="form-control" asp-for="Phone" name="Phone" id="Phone" placeholder="+48 123 456 789" />
                                <span class="text-danger" asp-validation-for="Phone"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Termin rezerwacji</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartTime" class="form-label"></label>
                                <input type="datetime-local" class="form-control" asp-for="StartTime" name="StartTime" id="StartTime" required />
                                <span class="text-danger" asp-validation-for="StartTime"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EndTime" class="form-label"></label>
                                <input type="datetime-local" class="form-control" asp-for="EndTime" name="EndTime" id="EndTime" required />
                                <span class="text-danger" asp-validation-for="EndTime"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Uwaga!</strong> Jeśli nie masz konta, twoja rezerwacja będzie w statusie oczekiwania na potwierdzenie.
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check"></i> Zarezerwuj jako gość
                    </button>
                    <a href="@Url.Action("Details", "Resource", new { id = Model.ResourceId })" class="btn btn-secondary">
                        Anuluj
                    </a>
                </div>
            </form>

            <hr />

            <div class="alert alert-info">
                <strong>Już masz konto?</strong>
                <a href="@Url.Action("Login", "Account")">Zaloguj się</a> aby dokonać rezerwacji z pełnymi możliwościami.
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Rezerwacja bez konta</h5>
                </div>
                <div class="card-body">
                    <p class="small mb-2">Przed rezerwacją:</p>
                    <ul class="small">
                        <li>Podaj prawidłowy adres e-mail</li>
                        <li>Podaj numer telefonu</li>
                        <li>Wybierz czas rezerwacji</li>
                        <li>Potwierdź rezerwację</li>
                    </ul>
                    <p class="text-muted small mt-3">Potwierdzenie rezerwacji będzie wysłane na podany adres e-mail.</p>
                </div>
            </div>
        </div>
    </div>
</div>
