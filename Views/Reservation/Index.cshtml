@model IEnumerable<UniversalReservationMVC.Models.Seat>
@{
    ViewData["Title"] = "Mapa miejsc";
    var resourceId = ViewBag.ResourceId as int? ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <div>
        <p class="text-uppercase text-muted fw-semibold mb-1">Miejsca</p>
        <h2 class="h3 mb-0">Wybierz miejsce i rezerwuj</h2>
        <p class="text-muted mb-0">Kliknij dostępne miejsce, aby przejść do formularza rezerwacji.</p>
    </div>
    <div class="d-flex gap-2">
        <a href="@Url.Action("GetSeatMap", "Seat", new { resourceId })" class="btn btn-outline-primary"><i class="fas fa-map me-2"></i>Widok graficzny</a>
        <a href="@Url.Action("Index", "Event")" class="btn btn-outline-secondary"><i class="fas fa-calendar me-2"></i>Wydarzenia</a>
    </div>
</div>

<div class="row g-3">
    @foreach (var s in Model)
    {
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card seat-card shadow-sm h-100 hover-lift">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <span class="badge bg-success-subtle text-success"><i class="fas fa-chair me-1"></i>Wolne</span>
                        <span class="text-muted small">@s.Id</span>
                    </div>
                    <div class="mb-3">
                        <div class="fw-bold">Rząd: <span class="text-primary">@s.X</span></div>
                        <div class="fw-bold">Miejsce: <span class="text-primary">@s.Y</span></div>
                    </div>
                    <a class="btn btn-primary w-100" href="/Reservation/Create?resourceId=@resourceId&seatId=@s.Id">
                        <i class="fas fa-ticket-alt me-1"></i>Rezerwuj
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="card shadow-sm mt-4">
        <div class="card-body text-center py-5">
            <h5 class="mb-2">Brak zdefiniowanych miejsc</h5>
            <p class="text-muted mb-4">Dodaj miejsca do zasobu, aby umożliwić rezerwacje.</p>
            <a href="@Url.Action("Edit", "Resource", new { id = resourceId })" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Dodaj miejsca
            </a>
        </div>
    </div>
}