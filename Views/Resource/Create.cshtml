@model UniversalReservationMVC.Models.Resource
@{
    ViewData["Title"] = "Utwórz zasób";
}

<h2>Utwórz nowy zasób</h2>

<form method="post" class="mt-4">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    
    <div class="mb-3">
        <label for="name" class="form-label">Nazwa</label>
        <input type="text" id="name" name="name" class="form-control" required />
        <span class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="resourceType" class="form-label">Typ zasobu</label>
        <select id="resourceType" name="resourceType" class="form-control">
            <option value="0">Restauracja</option>
            <option value="1">Kino</option>
            <option value="2">Biuro</option>
            <option value="3">Sala konferencji</option>
            <option value="4">Teatr</option>
            <option value="5">Biurko/Miejsce</option>
        </select>
        <span class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="location" class="form-label">Lokalizacja</label>
        <input type="text" id="location" name="location" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Opis</label>
        <textarea id="description" name="description" class="form-control"></textarea>
        <span class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Utwórz</button>
    <a href="@Url.Action("Index", "Resource")" class="btn btn-secondary">Anuluj</a>
</form>
