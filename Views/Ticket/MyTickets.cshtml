@using UniversalReservationMVC.Models
@model IEnumerable<UniversalReservationMVC.Models.Ticket>
@{
    ViewData["Title"] = "Moje bilety";
}

<div class="container mt-4">
    <h1>Moje bilety</h1>
    <p class="text-muted">Zarządzaj swoimi biletami i rezerwacjami.</p>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            <p class="mb-0">Nie masz jeszcze żadnych biletów.</p>
        </div>
    }
    else
    {
        <div class="table-responsive mt-4">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Zasób</th>
                        <th>Cena</th>
                        <th>Status</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Reservation?.Resource?.Name</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Status</td>
                            <td>
                                @if (item.Status == TicketStatus.Purchased)
                                {
                                    <form method="post" action="@Url.Action("Cancel", "Ticket")" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="ticketId" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">Anuluj</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Powrót do strony głównej</a>
    </div>
</div>