@model UniversalReservationMVC.ViewComponents.CompanyNavViewModel

@if (Model.HasCompany)
{
    @if (Model.ViewMode == "owner")
    {
        <li class="nav-item">
            <a class="nav-link btn btn-outline-success text-white border-success" href="@Url.Action("Dashboard", "Company")">
                <i class="fas fa-building me-1"></i>Moja firma
            </a>
        </li>
        <li class="nav-item">
            <form method="post" action="@Url.Action("SetCustomerMode", "ViewMode")" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                <button type="submit" class="nav-link btn btn-outline-info text-white border-info" title="Przełącz na widok klienta">
                    <i class="fas fa-user me-1"></i>Widok klienta
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <form method="post" action="@Url.Action("SetOwnerMode", "ViewMode")" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                <button type="submit" class="nav-link btn btn-outline-warning text-white border-warning" title="Powrót do panelu właściciela">
                    <i class="fas fa-crown me-1"></i>Widok właściciela
                </button>
            </form>
        </li>
    }
}
