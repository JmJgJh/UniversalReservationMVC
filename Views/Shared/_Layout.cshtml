@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UniversalReservationMVC - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/custom-theme.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">UniversalReservation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")"><i class="fas fa-home me-1"></i>Strona główna</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Resource")"><i class="fas fa-door-open me-1"></i>Zasoby</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Event")"><i class="fas fa-calendar-alt me-1"></i>Wydarzenia</a></li>
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("MyReservations", "Reservation")"><i class="fas fa-bookmark me-1"></i>Moje rezerwacje</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("MyTickets", "Ticket")"><i class="fas fa-ticket-alt me-1"></i>Moje bilety</a></li>
                        @if (User.IsInRole("Owner"))
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Dashboard", "Company")"><i class="fas fa-chart-line me-1"></i>Panel firmy</a></li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i>@User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Mój profil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" action="@Url.Action("Logout", "Account")" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Wyloguj się</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account")"><i class="fas fa-sign-in-alt me-1"></i>Zaloguj się</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Register", "Account")"><i class="fas fa-user-plus me-1"></i>Zarejestruj się</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center py-4 mt-5">
        <p>&copy; 2025 UniversalReservationMVC. Wszystkie prawa zastrzeżone.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://js.stripe.com/v3/"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>