@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UniversalReservationMVC - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">UniversalReservation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Strona główna</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Resource")">Zasoby</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Event")">Wydarzenia</a></li>
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("MyReservations", "Reservation")">Moje rezerwacje</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("MyTickets", "Ticket")">Moje bilety</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                @User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#">Mój profil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" action="@Url.Action("Logout", "Account")" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">Wyloguj się</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account")">Zaloguj się</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Register", "Account")">Zarejestruj się</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center py-4 mt-5">
        <p>&copy; 2025 UniversalReservationMVC. Wszystkie prawa zastrzeżone.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>