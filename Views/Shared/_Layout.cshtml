<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UniversalReservationMVC - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/custom-theme.css" />
    <style>
        :root {
            --bs-body-bg: #ffffff;
            --bs-body-color: #212529;
            --bs-border-color: #dee2e6;
            --bs-card-bg: #ffffff;
            --bs-navbar-bg: #212529;
            --bs-navbar-color: #ffffff;
        }
        body.dark-mode {
            --bs-body-bg: #1a1a1a;
            --bs-body-color: #f0f0f0;
            --bs-border-color: #444;
            --bs-card-bg: #2d2d2d;
            --bs-navbar-bg: #0d0d0d;
            --bs-navbar-color: #f0f0f0;
        }
        body {
            background-color: var(--bs-body-bg);
            color: var(--bs-body-color);
            transition: background-color 0.3s, color 0.3s;
        }
        .card {
            background-color: var(--bs-card-bg);
            color: var(--bs-body-color);
            border-color: var(--bs-border-color);
        }
        .navbar {
            background-color: var(--bs-navbar-bg) !important;
            color: var(--bs-navbar-color);
        }
        .table {
            color: var(--bs-body-color);
            border-color: var(--bs-border-color);
        }
        .table thead th {
            border-color: var(--bs-border-color);
            background-color: var(--bs-card-bg);
        }
        .form-control, .form-select {
            background-color: var(--bs-card-bg);
            color: var(--bs-body-color);
            border-color: var(--bs-border-color);
        }
        .form-control:focus, .form-select:focus {
            background-color: var(--bs-card-bg);
            color: var(--bs-body-color);
            border-color: #0d6efd;
        }
        .dropdown-menu {
            background-color: var(--bs-card-bg);
            border-color: var(--bs-border-color);
        }
        .dropdown-item {
            color: var(--bs-body-color);
        }
        .dropdown-item:hover {
            background-color: #0d6efd;
            color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">UniversalReservation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")"><i class="fas fa-home me-1"></i>Strona gÅ‚Ã³wna</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Resource")"><i class="fas fa-door-open me-1"></i>Zasoby</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Event")"><i class="fas fa-calendar-alt me-1"></i>Wydarzenia</a></li>
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("MyReservations", "Reservation")"><i class="fas fa-bookmark me-1"></i>Moje rezerwacje</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("MyTickets", "Ticket")"><i class="fas fa-ticket-alt me-1"></i>Moje bilety</a></li>
                        @await Component.InvokeAsync("CompanyNav")
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i>@User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>MÃ³j profil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" action="@Url.Action("Logout", "Account")" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Wyloguj siÄ™</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account")"><i class="fas fa-sign-in-alt me-1"></i>Zaloguj siÄ™</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Register", "Account")"><i class="fas fa-user-plus me-1"></i>Zarejestruj siÄ™</a></li>
                    }
                    <!-- Dark Mode Toggle -->
                    <li class="nav-item">
                        <button class="nav-link btn btn-link" id="darkModeToggle" type="button" title="PrzeÅ‚Ä…cz tryb nocny">
                            <i class="fas fa-moon"></i>
                        </button>
                    </li>
                    <!-- Language Switcher -->
                    <li class="nav-item dropdown">
                        @{
                            var culture = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
                            var flagIcon = culture == "pl" ? "ðŸ‡µðŸ‡±" : "ðŸ‡¬ðŸ‡§";
                            var langText = culture == "pl" ? "Polski" : "English";
                        }
                        <a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button" data-bs-toggle="dropdown">
                            <span style="font-size: 1.2em;">@flagIcon</span> @langText
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <form method="post" action="@Url.Action("SetLanguage", "Language")">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="culture" value="pl" />
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                    <button type="submit" class="dropdown-item">
                                        ðŸ‡µðŸ‡± Polski
                                    </button>
                                </form>
                            </li>
                            <li>
                                <form method="post" action="@Url.Action("SetLanguage", "Language")">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="culture" value="en" />
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                    <button type="submit" class="dropdown-item">
                                        ðŸ‡¬ðŸ‡§ English
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center py-4 mt-5">
        <p>&copy; 2025 UniversalReservationMVC. Wszystkie prawa zastrzeÅ¼one.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        // Dark Mode Toggle
        const darkModeToggle = document.getElementById('darkModeToggle');
        const htmlElement = document.documentElement;
        const savedDarkMode = localStorage.getItem('darkMode');

        // SprawdÅº preferencjÄ™ systemu uÅ¼ytkownika
        const prefersDarkMode = window.matchMedia('(prefers-color-scheme: dark)').matches;
        
        // Ustaw poczÄ…tkowy stan
        if (savedDarkMode === 'true' || (savedDarkMode === null && prefersDarkMode)) {
            document.body.classList.add('dark-mode');
            darkModeToggle.innerHTML = '<i class="fas fa-sun"></i>';
        }

        // Toggle Dark Mode
        darkModeToggle.addEventListener('click', function() {
            document.body.classList.toggle('dark-mode');
            const isDarkMode = document.body.classList.contains('dark-mode');
            localStorage.setItem('darkMode', isDarkMode);
            darkModeToggle.innerHTML = isDarkMode ? '<i class="fas fa-sun"></i>' : '<i class="fas fa-moon"></i>';
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>